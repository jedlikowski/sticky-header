{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {}
  },
  "extends": ["prettier", "prettier/standard"],
  "env": {
    "browser": true,
    "amd": true,
    "node": true
  },
  "plugins": ["babel", "prettier"],
  "settings": {
    "import/resolver": {
      "node": {},
      "babel-module": {}
    }
  },
  "rules": {
    "sort-imports": "error",
    "no-undef": "error",
    "prettier/prettier": "error",
    "babel/quotes": [1, "single"],
    "quotes": 0,
    "import/default": 0,
    "semi": [2, "always"],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "always",
        "named": "never"
      }
    ]
  }
}
